{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", "helpers:pinGitHubActionDigests", ":disableRateLimiting"],
  "labels": ["dependencies"],
  "commitMessagePrefix": "⬆️",
  "automergeStrategy": "squash",
  "dependencyDashboard": true,
  "npm": {
    "rangeStrategy": "bump",
    "packageRules": [
      {
        "matchUpdateTypes": ["minor", "patch"],
        "matchCurrentVersion": "!/^0/",
        "automerge": true
      },
      {
        "matchPackagePatterns": ["@kingsworld"],
        "groupName": "King's World Dependencies"
      }
    ]
  }
}
